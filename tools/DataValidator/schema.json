{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Nog√ºe Content Schemas",
  "type": "object",
  "properties": {
    "tiers": {
      "type": "object",
      "properties": {
        "unlock": {
          "type": "object",
          "properties": {
            "systems": { "type": "array", "items": {"type": "string"} },
            "devices": { "type": "array", "items": {"type": "string"} }
          },
          "required": ["systems"],
          "additionalProperties": true
        },
        "director": {
          "type": "object",
          "properties": {
            "K": { "type": "integer", "minimum": 1, "maximum": 4 },
            "epsilon": { "type": "number", "minimum": 0, "maximum": 1 }
          },
          "required": ["K"],
          "additionalProperties": true
        },
        "automation": {
          "type": "object",
          "properties": {
            "multiplier": { "type": "number", "minimum": 0, "maximum": 1 }
          },
          "required": ["multiplier"],
          "additionalProperties": true
        },
        "events_weight_adjust": { "type": "object", "additionalProperties": {"type": "number"} }
      },
      "additionalProperties": true
    },
    "events": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "type": { "type": "string", "enum": ["micro", "meso", "macro"] },
          "trigger": { "type": "string" },
          "effect": { "type": "string" },
          "score": {
            "type": "object",
            "properties": {
              "base_danger": { "type": "number" },
              "pedagogy": { "type": "number" },
              "novelty_key": { "type": "string" },
              "repetition_penalty": { "type": "number" },
              "contract_boost": { "type": "number" }
            },
            "required": ["base_danger"],
            "additionalProperties": true
          },
          "solvable_tags": { "type": "array", "items": {"type": "string"} }
        },
        "required": ["id", "type", "trigger", "effect"],
        "additionalProperties": true
      }
    }
  }
}

